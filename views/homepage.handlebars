<!-- Loop over each object in the projects array -->
{{#each restaurants as |restaurant| }}
<div class="flex flex-col mb-4 project p-4 justify-center">
  <div class="ml-6">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/restaurant/{{restaurant.id}}">{{restaurant.name}}</a>
    </h2>
    <p class=""><span class="dollar-amount">{{format_amount restaurant.meals_available}}</span>meals available!</p>
  </div>
  <div class="ml-6">
    <p>
      {{restaurant.cuisine}}
    </p>
    <p>Created by {{restaurant.user.name}} on {{format_date restaurant.date_created}}</p>
  </div>
</div>
{{/each}}
