<!-- Header section with current location + # of restaurants added -->
<div class="grow w-full max-w-sm p-2 m-2 text-black bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
  <div>
    <h2>Latitude:</h2>
    <div id="latitude"></div>
  </div>
  <div id="longitude"></div>
</div>
{{!-- {{restaurants.length}} --}}

<!-- Loop over each object in the projects array -->
<div class="flex flex-wrap">
{{#each restaurants as |restaurant| }}
<div class="content-center max-w-sm p-8 m-3 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
  <div class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/restaurant/{{restaurant.id}}">{{restaurant.name}}</a>
    </h2>
    
  </div>
  <div class="font-normal text-green-400">
    <p class=""><span class="dollar-amount">{{format_amount restaurant.meals_available}}</span>&nbsp meals available!</p>
  </div>
  <div class="font-normal text-gray-700 dark:text-gray-400">
    <p>
      {{restaurant.cuisine}}
    </p>
    <p class="hidden lat-{{@index}}" data-lat="{{restaurant.lat}}">
      Latitude: {{restaurant.lat}}
    </p>
    <p class="hidden lon-{{@index}}" data-lon="{{restaurant.lon}}">
      Longitude: {{restaurant.lon}}
    </p>
    <p>Distance: <span class="distance-{{@index}}"></span> miles</p>
    <p>Created by {{restaurant.user.name}} on {{format_date restaurant.date_created}}</p>
  </div>
</div>
{{/each}}
</div>

<script src="./js/homepage.js"></script>
